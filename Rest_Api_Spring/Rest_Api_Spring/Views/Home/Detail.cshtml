@{
}
@model User;
@{


    <div class="card">
        <div class="card-header">
            @Model.CodiceFiscale
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
            <p class="card-text">Anno di inizzio abbonamento @Model.StartDate, tipo di abbonamnto @Model.UserType</p>
        </div>
        <div class="">
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.UserId">Elimina</a>
        </div>
    </div>

    <h1>Se desideri cambiare . . .  </h1>

    <form method="post" asp-action="Edit">
        <input name="userId" type="hidden" value="@Model.UserId">
        <div class="form-group">
            <label>CF</label>
            <input name="codiceFiscale" type="text" class="form-control" aria-describedby="Codice fiscale">
        </div>
        <div class="form-group">
            <label>eta</label>
            <input name="eta" type="number" class="form-control" aria-describedby="Codice fiscale">
        </div>
        <div class="form-group">
            <label>Nome</label>
            <input name="nameFirst" type="text" class="form-control" aria-describedby="Codice fiscale">
        </div>
        <div class="form-group">
            <label>Cognome</label>
            <input name="lastName" type="text" class="form-control" aria-describedby="Codice fiscale">
        </div>
        <div class="form-group">
            <label>Data abbonamento</label>
            <input name="startDate" type="date" class="form-control" aria-describedby="Codice fiscale">
        </div>
        <div class="form-group">
            <label>Tipo abbonamento</label>
            <input name="userType" type="text" class="form-control" aria-describedby="Codice fiscale">
        </div>
        <input type="submit" value="Submit">
    </form>
}